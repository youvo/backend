<?php

/**
 * @file
 * Custom module which provides developer functions.
 */

use Drupal\Core\Render\Markup;

/**
 * Function printing variable contents.
 */
function dvp($var) {
  $message = '<pre>' . print_r($var, TRUE) . '</pre>';
  $rendered_message = Markup::create($message);
  \Drupal::messenger()->addMessage($rendered_message);
}
