<?php

/**
 * @file
 * Provides a paragraph entity type.
 */

use Drupal\Core\Render\Element;

/**
 * Implements hook_theme().
 */
function paragraphs_theme() {
  return [
    'paragraph' => [
      'render element' => 'elements',
    ],
  ];
}

/**
 * Prepares variables for paragraph templates.
 *
 * Default template: paragraph.html.twig.
 *
 * @param array $variables
 *   An associative array containing:
 *   - elements: An associative array containing the paragraph information and
 *     any fields attached to the entity.
 *   - attributes: HTML attributes for the containing element.
 */
function template_preprocess_paragraphs(array &$variables) {
  foreach (Element::children($variables['elements']) as $key) {
    $variables['content'][$key] = $variables['elements'][$key];
  }
}
